<!-- メインのページ -->
<div class="box-index">
<p class="flash"><%= flash[:notice] %></p>

<h1>Books</h1>
<table>
<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
</thead>

<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book.id) %>
		</td>
		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
		</td>
	</tr>
	<% end %>
</tbody>
</table>

<!-- 新規投稿 -->

<!-- ||←これのなかはブロック変数と言って、form_forのdoからendまで有効。()のなかのインスタンス変数はブロック変数に渡される。インスタンス変数はbooksコントローラのnewアクションから渡される-->
<%= form_for(@book) do |f| %>
<h2>New book</h2>

<div class="bottom">
<p>Title</p>
<%= f.text_field :title %>
</div>

<div class="bottom">
<p>Body</p>
<%= f.text_area :body %>
</div>

<p><%= f.submit 'Create Book' %></p>

<% end %>

</div>
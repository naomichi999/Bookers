<div class="edit-box">

<p class="flash"><%= flash[:notice] %></p>
<h1><strong>Editing Book</strong></h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

    <div class="bottom">
    <p>Title</p>
    <%= f.text_field :title %></div>

    <div class="bottom">
    <p>Body</p>
    <%= f.text_area :body %></div>

    <div class="bottom">
    <p><%= f.submit 'Update Book' %></p></div>

    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
<% end %>
</div>

